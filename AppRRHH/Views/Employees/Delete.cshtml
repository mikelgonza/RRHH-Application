@model AppRRHH.Models.Employee

@{
    ViewData["Title"] = "Delete";

    int years = DateTime.Now.Year - Model.Seniority.Year;
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Employee</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            <a target="_blank" href="~/img/@ViewBag.Image">
                <img src="~/img/@ViewBag.Image" class="user-image-edit">
            </a>
        </dt>
        <dd class="col-sm-10"></dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Surname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Surname)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Seniority)
        </dt>
        <dd class="col-sm-10">
            @years years - since @Model.Seniority.ToShortDateString()
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GrossSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GrossSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.NetSalary)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NetSalary)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department.Namespace)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
